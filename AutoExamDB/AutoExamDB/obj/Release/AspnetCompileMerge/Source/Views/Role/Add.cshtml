@model AutoExamDB.Models.Roles
@{
    ViewBag.Title = "添加角色";
}

<div class="card text-center">
    <div class="card-header">
        @*<i class="ion-reply text-left" style="font-size:24px;margin-right:100px;"></i>*@
        添加新角色
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Add", "Role", FormMethod.Post))
        {            
            <div class="form-group row">
                <label for="Name" class="col-sm-5 col-form-label text-right">角色名称：</label>
                <div class="col-sm-7">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control form-group", placeholder = "角色名称" })
                </div>
            </div>            
            <div class="form-group row">
                <label for="Remark" class="col-sm-5 col-form-label text-right">备注：</label>
                <div class="col-sm-7">
                    @Html.TextBoxFor(model => model.Remark, new { @class = "form-control form-group", placeholder = "备注" })
                </div>
            </div>
            <input type="submit" value="提交" class="btn btn-primary" />
        }
    </div>

</div>

