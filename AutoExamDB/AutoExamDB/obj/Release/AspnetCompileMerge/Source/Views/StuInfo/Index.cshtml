@model List<AutoExamDB.Models.StuInfo>
@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <td>学号</td>
            <td>姓名</td>
            <td>职位</td>
            <td>性别</td>
            <td>寸照</td>
            <td>地址</td>
            <td>班级</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StuNo</td>
                <td>@item.StuName</td>
                <td>@item.StuDuty</td>
                <td>
                    @(item.StuSex ? "男" : "女")
                </td>
                <td>
                    <img src="@item.StuPhoto" alt="Alternate Text" style="width:50px;" />
                </td>
                <td>@item.StuAdd</td>
                <td>@item.StuNo.Substring(0,10)</td>
            </tr>
        }

    </tbody>
</table>
@{
    int count = (int)ViewBag.Count;
}
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a class="page-link" href="/StuInfo/Index/7/1">首页</a>
        </li>
        @for (int i = 1; i <= count; i++)
        {
            <li class="page-item @(ViewBag.PageIndex==i ? "active":"")"><a class="page-link" href="/StuInfo/Index/7/@i">@i</a></li>
        }
        <li class="page-item">
            <a class="page-link" href="/StuInfo/Index/7/@count">尾页</a>
        </li>
    </ul>
</nav>

